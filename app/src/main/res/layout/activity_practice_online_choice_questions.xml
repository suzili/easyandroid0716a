<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.easyandroid.activity.PracticeOnlineChoiceQuestionsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_shortedtext"
            android:orientation="vertical"
            android:padding="@dimen/nikakulu_padding">

            <TextView
                android:id="@+id/choice_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_shortedtext"
                android:text="大煮干丝”是哪个菜系的代表菜之一( )。" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/choice_A"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/answer_A"
                        android:layout_width="28dp"
                        android:layout_height="28dp"

                        android:background="@drawable/bg_unchoicebutton"
                        android:gravity="center"
                        android:text="A"
                        android:textColor="#000" />

                    <TextView
                        android:id="@+id/answer_A_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="50dp"
                        android:text="广东菜系" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/choice_B"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/answer_B"
                        android:layout_width="28dp"
                        android:layout_height="28dp"

                        android:background="@drawable/bg_unchoicebutton"
                        android:gravity="center"
                        android:text="B"
                        android:textColor="#000" />

                    <TextView
                        android:id="@+id/answer_B_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="50dp"
                        android:text="广东菜系" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/choice_C"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/answer_C"
                        android:layout_width="28dp"
                        android:layout_height="28dp"

                        android:background="@drawable/bg_unchoicebutton"
                        android:gravity="center"
                        android:text="C"
                        android:textColor="#000" />

                    <TextView
                        android:id="@+id/answer_C_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="50dp"
                        android:text="广东菜系" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/choice_D"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/answer_D"
                        android:layout_width="28dp"
                        android:layout_height="28dp"

                        android:background="@drawable/bg_unchoicebutton"
                        android:gravity="center"
                        android:text="D"
                        android:textColor="#000" />

                    <TextView
                        android:id="@+id/answer_D_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:text="广东菜系" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/choice_bt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_submitbt"
                        android:text="提交"
                        android:textColor="#fff"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/invisible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:visibility="invisible">

                    <TextView
                        android:id="@+id/textView24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="答案:" />

                    <TextView
                        android:id="@+id/choice_as"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="淮扬菜系" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="50dp">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@mipmap/beizuocishu" />

                    <TextView
                        android:id="@+id/cq_frequency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="10sp"
                        android:layout_gravity="center_vertical"
                        android:text="已做1503次" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@mipmap/fabuzhe" />

                    <TextView
                        android:id="@+id/cq_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="10sp"
                        android:layout_gravity="center_vertical"
                        android:text="成都职业技术学院" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@mipmap/fabushijian" />

                    <TextView
                        android:id="@+id/cq_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="10sp"
                        android:layout_gravity="center_vertical"
                        android:text="2017.12.1" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </ScrollView>
</LinearLayout>
