<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context="com.easyandroid.activity.LoginActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorMain"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_big"
            android:textColor="@color/colorWhite"
            android:text="登录"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="179dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:layout_marginTop="46dp"
                android:background="@drawable/yiandroid" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="14dp"
                android:background="@drawable/ic_logo_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="38dp"
                android:layout_marginRight="38dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/editText_account_input"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="43dp"
                    android:background="@drawable/login_input_bg"
                    android:hint="账号"
                    android:paddingLeft="12dp"
                    android:textColorHint="@android:color/white"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editText_password_input"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="41dp"
                    android:background="@drawable/login_input_bg"
                    android:inputType="textPassword"
                    android:hint="密码"
                    android:paddingLeft="12dp"
                    android:textColorHint="@android:color/white"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_marginTop="24dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/iamgeView_show_rm_state"
                            android:layout_width="12sp"
                            android:layout_height="12sp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/blue_circular_background" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:background="@android:color/transparent"
                            android:text="记住密码"
                            android:textColor="#3f3f3f"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:text="忘记密码?"
                        android:textColor="#3f3f3f"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/layout_personalUser"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageView_personal"
                                android:layout_width="33dp"
                                android:layout_height="33dp"
                                android:background="@drawable/ic_personal_user_image" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="个人用户"
                                android:textColor="#3f3f3f"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/layout_schoolUser"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iamgeView_schoolUser"
                                android:layout_width="33dp"
                                android:layout_height="33dp"
                                android:background="@drawable/ic_school_user_image" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="学校用户"
                                android:textColor="#3f3f3f"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="39dp"
                    android:gravity="center">
                    <Button
                        android:id="@+id/button_login"
                        android:layout_width="93dp"
                        android:layout_height="40dp"
                        android:background="@drawable/login_input_bg"
                        android:text="登录"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"/>
                    <Button
                        android:id="@+id/button_reg"
                        android:layout_width="93dp"
                        android:layout_height="40dp"
                        android:background="@drawable/login_input_bg"
                        android:text="注册"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
